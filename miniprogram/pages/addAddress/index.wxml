<!--pages/addAddress/index.wxml-->
<view class="main">
    <view class="info-address wrap">
        <view class="username flex">
            <view class="title">收货人</view>
            <input class="text" type="text" placeholder="请填写收货人姓名" />
        </view>
        <view class="phone flex">
            <view class="title">手机号码</view>
            <input class="text" type="text" placeholder="请填写手机号码" />
        </view>
        <view class="area flex">
            <view class="title">地区信息</view>
            <input class="text" type="text" placeholder="请填写地区信息" />
        </view>
        <view class="address flex">
            <view class="title">详细地址</view>
            <input class="text" type="text" placeholder="请填写详细地址" />
        </view>
        <view class="postcode flex">
            <view class="title">邮政编码</view>
            <input class="text" type="text" placeholder="请填写邮政编码" />
        </view>
        <view class="btn-submit mt-48r" bindtap="back" data-name="userInfo">保存</view>
    </view>
    
</view>