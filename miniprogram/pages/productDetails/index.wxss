/* pages/productDetails/index.wxss */
.detail-outer-layer {
    background-color: #EFEFEF;
    height: calc(100vh - 100rpx);
}

.bg-details {
    width: 100%;
    height: 40vh;
}

.product-details {
    border-radius: 50rpx;
    background-color: white;
    padding: 60rpx;
}

.commodity-price {
    font-size: 50rpx;
    font-weight: 700;
    color: #E64430;
}

.trade-name {
    font-size: 40rpx;
    font-weight: 700;
}

.product-introduction {
    font-size: 24rpx;
    color: #969696;
}

.address-laber {
    width: 150rpx;
    font-weight: 700;
}

.information {
    font-size: 24rpx;
    color: #969696;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space:nowrap
}

.address {
    display: flex;
}
.footer{
    width: 100%;
    height: 100rpx;
    font-size: 40rpx;
    background-color: #E64430;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}
