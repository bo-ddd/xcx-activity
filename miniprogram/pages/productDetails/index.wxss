/* pages/productDetails/index.wxss */
.detail-outer-layer {
    background-color: #ffffff;
    height: calc(100vh - 100rpx);
}
.bd-redius{
    width: 100%;
    height: 40vh;
    background-color: #f8f8f8;
}
.bg-details {
    width: 100%;
    height: 40vh;

}

.product-details {
    border-radius: 50rpx;
    background-color: white;
    padding: 60rpx;
}
.commodity{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}
.commodity-price {
    font-size: 50rpx;
    font-weight: 700;
    color: #E64430;
}
.collection{
    display: flex;
    flex-direction: column;
    align-items: center;
}
.collection-image{
    width: 50rpx;
    height: 50rpx;
}
.collection-text{
    font-size: 25rpx;
    color: #ff9000;
}
.trade-name {
    font-size: 40rpx;
    font-weight: 700;
}

.product-introduction {
    font-size: 24rpx;
    color: #969696;
}
.item-color{
    font-weight: 700;  
    display: flex;
    align-items: center;
}
.width-15{
     width:15%;
}
.cl-btn{
    display: flex;
}
.reduis-50vh{
width: 40rpx;
height: 40rpx;
border-radius: 50vh;
box-sizing: border-box;
margin-right:20rpx ;

}
.border-blue{
    border: 5rpx solid #1043cb;
}
.cl-white{
    background-color: #48dfa5;
}
.cl-black{
    background-color: #f04040;
}
.cl-grey{
    background-color: #b0b0b0;
}
.address-laber {
    width: 15%;   
    font-weight: 700;
}

.information {
    font-size: 24rpx;
    color: #969696;
}
.width-85{
    width: 85%;
}
.address {
    display: flex;
}
.footer{
    width: 100%;
    height: 100rpx;
    font-size: 40rpx;
    background-color: #E64430;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    position: fixed;
    bottom: 0;
}
