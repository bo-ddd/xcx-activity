/* pages/merchantInfo/index.wxss */
.title{
    position: relative;
    height: 400rpx;
    line-height: 300rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
    font-weight: bolder;
    background-color: rgb(238, 123, 102);
    color: white;
}
.merchant-info{
    border-radius: 20rpx;
    background-color: white;
    box-shadow: 0 0 20rpx #ccc;
    display: flow-root;
    display: flex;
    flex-direction: column;
    gap: 10rpx 0;
    box-sizing: border-box;
    padding: 20rpx;
    position: relative;
    top: -100rpx;
    height: 820rpx;
    overflow: hidden;
    overflow: scroll;
}
.license{
    width: 600rpx;
    height: 400rpx;
    border: 5rpx dashed black;
    margin: 0 auto;
    background: url('https://7a6c-zliu-dev-4gclbljp64cb5cd3-1302106483.tcb.qcloud.la/icon-choice.png?sign=647490245fea4f0f5c212c6844bd6c4b&t=1675417159');
    background-repeat: no-repeat;
    background-position: center;
}
.list-item{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.btn {
    display: flex;
    justify-content: space-around;
    margin: 0;
}
.refuse,
.pass {
    width: 260rpx !important;
}
.pass {
    display: inline-block;
    color: #fff;
    font-weight: bold;
    padding: 15rpx 30rpx;
    border-radius: 30rpx;
    text-align: center;
    background: linear-gradient(to right bottom, rgb(243, 211, 211), #e45e4c);
}

.refuse {
    border: 1rpx solid red;
    display: inline-block;
    font-weight: bold;
    padding: 15rpx 30rpx;
    border-radius: 30rpx;
    text-align: center;
    color: red;
}