/* pages/activity/index.wxss */
.nav {
    color: #353535;
    z-index: 999999;
    max-height: 94rpx;
    width: 100%;
}

/* 设置为水平布局，文字居中显示 */
.flex-nav {
    display: flex;
    text-align: center;
    align-items: center;
}

/* 设置选中项的底部边框 */
.nav .nav-item{
    border-bottom: 4rpx solid white; 
}

.nav .nav-item.current {
    border-bottom-color: #f00;
}

/* 设置选中项的文字颜色和大小 */
.text-selected {
    color: #f00;
}

/* 设置各项的高度、边距，同时设置flex=1，表示各项平分 */
.nav .nav-item {
    height: 80rpx;
    display: inline-block;
    line-height: 80rpx;
    margin: 0 10rpx;
    padding: 0 20rpx;
    flex: 1;
}

.activity-swiper {
    height: calc(100vh - 84rpx);
}

.activity-swiper .activity-item {
    overflow: scroll;
}

.activity-swiper .actvity {
    height: 240rpx;
    border-radius: 40rpx;
    box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.5);
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    background-repeat: no-repeat;
    background-position: center;
    background-size: cover;
    overflow: hidden;
}

.actvity .flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.actvity .duration {
    font-size: 20rpx;
    color: white;
    display: flex;
    align-items: center;
}

.actvity .entry {
    display: flex;
    justify-content: flex-end;
}

.actvity .btn-entry {
    border: solid 1rpx white;
    display: inline-block;
    padding: 4rpx 10rpx;
    font-size: 20rpx;
    border-radius: 20rpx;
    color: white;
}