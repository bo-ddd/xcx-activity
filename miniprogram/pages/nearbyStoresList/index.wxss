/* pages/nearbyStoresList/index.wxss */
page {
    background-color: #F5F6F8;
}

.nav {
    background-color: white;
    font-size: 28rpx;
    padding: 10rpx 20rpx;
    display: grid;
    grid-template-columns: 20% auto;
    gap: 0 20rpx;
}

.nav .position {
    display: flex;
    gap: 6rpx;
    align-items: center;
}

.nav .icon-select {
    width: 32rpx;
    height: 32rpx;
    flex-shrink: 0;
}

.nav .select {
    width: 100%;
    display: flex;
    gap: 20rpx;
    align-items: center;
}

.nav .input {
    width: 100%;
    display: flex;
    gap: 6rpx;
    align-items: center;
    border-radius: 40rpx;
    background-color: #f5f6f7;
    padding: 20rpx;
    box-sizing: border-box;
}

.img-arrow_bottom {
    width: 24rpx;
    height: 24rpx;
}

.nav .select .cancel {
    flex-shrink: 0;
    transition: all 1s linear;
}

.show {
    display: block;
    /* transform: translateX(-100rpx); */
}

.hidden {
    display: none;
    /* transform: translateX(100rpx); */


}