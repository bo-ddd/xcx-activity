/* pages/nearbyStoresList/index.wxss */
page {
    background-color: #F5F6F8;
}

.nav {
    background-color: white;
    font-size: 28rpx;
    padding: 10rpx 20rpx;
    display: grid;
    grid-template-columns: 20% auto;
    gap: 0 20rpx;
}

.nav .position {
    display: flex;
    gap: 6rpx;
    align-items: center;
}

.nav .icon-select {
    width: 32rpx;
    height: 32rpx;
    flex-shrink: 0;
}

.nav .select {
    width: 100%;
    display: flex;
    gap: 20rpx;
    align-items: center;
}

.nav .input {
    width: 100%;
    display: flex;
    gap: 6rpx;
    align-items: center;
    border-radius: 40rpx;
    background-color: #f5f6f7;
    padding: 10rpx;
    box-sizing: border-box;
}

.img-arrow_bottom {
    width: 24rpx;
    height: 24rpx;
}

.nav .select .cancel {
    flex-shrink: 0;
    transition: all 1s linear;
}

.show {
    display: block;
    /* transform: translateX(-100rpx); */
}

.hidden {
    display: none;
    /* transform: translateX(100rpx); */
}

.main .title {
    font-size: 28rpx;
    background-color: white;
    padding: 20rpx;
    font-weight: bold;
}

.list-address {
    padding: 0 20rpx;
}

.list-address .card-shop {
    padding: 20rpx;
    display: flex;
    gap: 10rpx;
    align-items: flex-start;
    border-radius: 20rpx;
    background-color: white;
}

.address-shop {
    font-size: 22rpx;
    color: #8d8b8b;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.address-shop .name-shop {
    color: black;
}

.address-shop .distance {
    color: #cc0d0d;
}

.card-shop .image-shop {
    width: 200rpx;
    height: 131rpx;
    border-radius: 10rpx;
}

.card-shop .select-btn {
    flex-shrink: 0;
    font-size: 24rpx;
    padding: 10rpx 20rpx;
    background-color: rgb(226, 220, 226);
    border-radius: 20rpx;
}

.main .scroll {
    height: calc(100vh - 120rpx);
    overflow: scroll;
}

.location .img-location {
    width: 24rpx;
    height: 34rpx;
    flex-shrink: 0;
}

.location .img-arrow {
    width: 20rpx;
    height: 20rpx;
    flex-shrink: 0;
}

.location {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx;
    background-color: white;
    font-size: 28rpx;
}

.location .info-location {
    display: flex;
    align-items: center;
    gap: 20rpx;
}

.location .btn-location {
    display: flex;
    gap: 6rpx;
    align-items: center;
    font-size: 24rpx;
}