  align-items: center;
  margin-right: 20rpx;
}
.icon-arrow{
  width: 30rpx;
  height: 30rpx;
}

.notice-outer-layer{
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #A9997D;
  background-color: white;
  border-radius: 50rpx;
}
.notice{
  display: flex;
  align-items: center;
  min-width: 0;
}
.notice-content{
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.icon-notice{
  width: 100rpx;
  height: 35rpx;
}
.icon-flash-sale{
  width: 150rpx;
  height: 40rpx;
}
.flash-sale-header{
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #959086;
  font-size: 30rpx;
  padding: 20rpx 0;
  background-image: linear-gradient(#FFF2D9,#FFF4E6, #FEFEFC);
  border-radius: 20rpx 20rpx 0 0;
}
.flash-sale-logo{
  width: 250rpx;
  height: 300rpx;

}
.flash-sale-commodity{
width: 250rpx;
}
.all-flash-purchases{
  display: flex;
}
.flash-sale-title{
  width: 100%;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
