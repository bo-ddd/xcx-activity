.scroll-view_H{
  white-space: nowrap;
  background-color: white;
  border-radius: 0 0 20rpx 20rpx;
}
.scroll-view-item_H{
  display: inline-block;
  padding: 20rpx;
}
.time-remaining{
  color: black;
  border: 1px solid #ccc;
  padding: 2rpx;
}
.flash-sale-time{
  font-size: 25rpx;
}
.flash-required-points{
  color: red;
}
.integral{
  font-size: 22rpx;
}
.snap-purchase{
  font-size: 24rpx;
  color: white;
  display: block;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  float: right;
  background-image: linear-gradient(to left, #E1C082, #C99A51);
}

.best-sellers-title{
  font-size: 40rpx;
  font-weight: 700;
  display: flex;
  justify-content: center;
  color: white;
}
.spot{
    margin: 0 10rpx;
}
.best-sellers-list{
 display: flex;
 justify-content: space-between;
 align-items: center;
 flex-wrap: wrap;
}
.best-sellers-item{
