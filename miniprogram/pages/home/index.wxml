<view class="points-mall ">
    <scroll-view class="scroll-wrapper" scroll-x scroll-with-animation="true" scroll-into-view="item{{currentTab < 4 ? 0 : currentTab - 3}}">
	<view class="navigate-item" id="item{{index}}" wx:for="{{ goodsType }}" wx:key="index" data-index="{{index}}" bindtap="handleClick">
		<view class="names {{currentTab === index ? 'active' : ''}}" wx:if="{{ item == 0 }}">热门商品</view>
		<view class="names {{currentTab === index ? 'active' : ''}}" wx:if="{{ item == 1 }}">家有萌宠</view>
		<view class="names {{currentTab === index ? 'active' : ''}}" wx:if="{{ item == 2 }}">数码科技</view>
		<view class="names {{currentTab === index ? 'active' : ''}}" wx:if="{{ item == 3 }}">潮流女装</view>
		<view class="names {{currentTab === index ? 'active' : ''}}" wx:if="{{ item == 4 }}">美妆达人</view>
		<view class="names {{currentTab === index ? 'active' : ''}}" wx:if="{{ item == 5 }}">潮男穿搭</view>
		<view class="currtline {{currentTab === index ? 'active' : ''}}"></view>
	</view>
</scroll-view>


<swiper class="wrap minheight" indicator-dots="{{false}}"  current="{{currentTab}}" bindchange="bindchange">
	<block>
			<swiper-item wx:for="{{ goodsList }}" wx:key="idx" >
				<scroll-view class="swiper-item" scroll-y enable-flex="true"  style="overflow: scroll; ">
                    <view class="commodity-item mt-30" wx:for="{{ hotGoods }}" wx:key="index"bindtap="navTab">
                        <image class="commodity-logo" src="{{item.goodsUrl}}" mode=""/>
                        <view class="commodity-content">
                            <view class="commodity-describe">{{ myItem.title }}</view>
                            <view class="exchange">{{item.goodsTitle}}</view>
                            <view class="price">
                                <view class="commodity-price">
                                <view class="integral-logo">
                                    <image class="integral" src="../../images/icon-integral.png" mode=""/>
                                </view>
                                <view class="quantity">
                                    {{item.price}}积分
                                </view>
                            </view>
                            <view class="discount">
                                折扣
                            </view>
                            </view>
                               
                        </view>
                    </view>

                    
				</scroll-view>
			</swiper-item>
	</block>
</swiper>
</view>
