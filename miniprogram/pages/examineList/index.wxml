<view class="box">
    <view class="examine-list">
        <view class='navBox'>
            <view class='titleLeftBox' bindtap='titleClick' data-idx='0'>
                <text class="tab {{0 == currentIndex ? 'colorLeftBox' : ''}}">待审核商铺</text>
                <view class="line {{0 == currentIndex ? 'lineBox' : 'notLineBox'}}" />
            </view>
            <view class='titleRightBox' bindtap='titleClick' data-idx='1'>
                <text class="tab {{1 == currentIndex ? 'coloRightBox' : ''}}">商铺列表</text>
                <view class="line {{1 == currentIndex ? 'lineBox' : 'notLineBox'}} " />
            </view>
        </view>
        <swiper class='swiperTtemBox' bindchange='pagechange' current='{{currentIndex}}' bindchange="bindchange">
            <swiper-item class='swiperTtemBox-item' wx:for="{{merchantStatus}}" wx:key="index">
                <view class="item mt-30 wrap" wx:for="{{ merchantList }}" wx:key="_id" data-_id="{{ item._id }}" bindtap="toActiveDetail">
                    <view class="item-left">
                        <view class="stor-name ml-20">
                            <text>商铺名称：</text>
                            <text>{{ item.storeName }}</text>
                        </view>
                        <view class="active-class ml-20">
                            <text> 经营类型：</text>
                            <text>{{ grades[item.storeClass - 1] }}</text>
                        </view>
                        <view class="stor-class ml-20">
                            <text> 联系电话：</text>
                            <text>{{ item.merchantPhone }}</text>
                        </view>
                    </view>
                    <view class="item-right">
                        <view class="btn">审核</view>
                    </view>
                </view>
            </swiper-item>
        </swiper>

