/* pages/launchActivities/index.wxss */
.launch-activities {
    height: 100vh;
}

.top-tab_swiper {
    position: sticky;
    top: 0;
    background-color: white;
    z-index: 100;
    border-bottom: 1px solid #ccc;
    zoom: 1;
    font-size: 30rpx;
}

.tips {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: rgb(240, 98, 98);
    font-size: 35rpx;
    font-weight: bold;
}

.tips.empty {
    width: 50%;
}

.swiper {
    height: 100%;
}

.swiper-item {
    overflow: scroll;
    height: 100%;
    padding: 40rpx 0;
    box-sizing: border-box;
}

.delete {
    width: 32rpx;
    height: 32rpx;
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}



.actvity {
    height: 295rpx;
    border-radius: 20rpx;
    box-shadow: 2px 2px 10rpx rgb(131, 131, 131);
    margin-bottom: 40rpx;
    position: relative;
}

.activity-bg {
    border-radius: 20rpx;
    width: 690rpx;
    height: 295rpx;
}

.update-btn {
    /* display: inline-block; */
    background: rgb(247, 245, 245);
    font-size: 30rpx;
    border-radius: 20rpx;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    color: rgb(29, 28, 28);
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}

.actvity .flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.actvity .duration {
    font-size: 20rpx;
    color: white;
}

.actvity .entry {
    display: flex;
    justify-content: flex-end;
}

.actvity .btn-entry {
    border: solid 1rpx white;
    display: inline-block;
    padding: 4rpx 10rpx;
    font-size: 20rpx;
    border-radius: 20rpx;
    color: white;
}

.activity-title {
    font-weight: bold;
}

.activity-text {
    padding: 15rpx;
}



.page-poster {
    display: flex;
}

.poster {
    border: 1px dashed #ccc;
    height: 450rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
}

.poster-icon {
    width: 100rpx;
    height: 100rpx;
}

.tab {
    float: left;
    width: 33.3333%;
    text-align: center;
    padding: 10rpx 0;
}

.gift-box {
    display: flex;
    justify-content: center;
}

.gift {
    width: 200rpx;
    height: 200rpx;
}

.top-tab_swiper:after {
    content: "";
    clear: both;
    display: block;
}

.tab-borer {
    border-bottom: 1px solid #f00;
    color: #f00;
    height: 40rpx;
    font-size: 30rpx;
}

/* .swiper-con {
    text-align: center;
} */

.page-lable {
    display: flex;
    align-items: center;
}

.page-lable-rule {
    display: flex;
    align-items: center;
}

.add {
    display: flex;
    flex-direction: column;
    gap: 30rpx 0;
    padding: 20rpx 0;
    overflow: scroll;
    box-sizing: border-box;
}

.lable {
    font-size: 32rpx;
    color: rgb(75, 74, 74);
    width: 185rpx;

}

.input {
    width: 400rpx;
    height: 60rpx;
    border-bottom: 1px solid rgb(201, 200, 200);
}

.textarea {
    border: 1px solid #ccc;
    padding: 15rpx;
    width: 500rpx;
    box-sizing: border-box;
}

.input-num {
    border: 1px solid #ccc;
    width: 350rpx;
}

.prize {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.prize-lable {
    display: flex;
}

.add-p {
    width: 150rpx;
    height: 150rpx;
}

.prize-setting {
    display: flex;
    padding: 0 15rpx;
}

.setting {
    display: flex;
    align-items: center;
}

.setting-lable {
    width: 150rpx;
}

.prize-ipt {
    border-bottom: 1px solid rgb(201, 200, 200);

}

.prize-right {
    display: grid;
}

.icon-addprizes {
    width: 30rpx;
    height: 30rpx;
}

.btn {
    border-radius: 20rpx;
}