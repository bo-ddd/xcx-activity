/* pages/launchActivities/index.wxss */
.launch-activities {
    height: 100vh;
    box-sizing: border-box;
}

.swiper {
    height: 100vh;
}

.swiper-item {
    /* height: 100vh; */
    overflow: scroll;
}

.tab {
    float: left;
    width: 49.3333%;
    text-align: center;
    padding: 10rpx 0;
}

.topTabSwiper {
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    zoom: 1;
    font-size: 30rpx;
}
.gift-box{
    display: flex;
    justify-content: center;
}
.gift {
    width: 200rpx;
    height: 200rpx;
}

.topTabSwiper:after {
    content: "";
    clear: both;
    display: block;
}

.tabBorer {
    border-bottom: 1px solid #f00;
    color: #f00;
    height: 40rpx;
    font-size: 30rpx;
}

.swiper {
    width: 100%;
}

.swiper_con {
    text-align: center;
    /* height: 100vh; */
    /* padding: 30rpx 0; */
    box-sizing: border-box;
}

.page-lable {
    display: flex;
    align-items: center;

}

.page-lable-rule {
    display: flex;
    align-items: center;
}

.add {
    display: flex;
    flex-direction: column;
    gap: 30rpx 0;
    /* height: 90%; */
    padding: 20rpx 0;
    overflow: scroll;
    box-sizing: border-box;
}

.lable {
    font-size: 32rpx;
    color: rgb(75, 74, 74);
    width: 185rpx;
    
}

.input {
    width: 400rpx;
    height: 60rpx;
    border: 1px solid rgb(201, 200, 200);
}

.textarea {
    border: 1px solid #ccc;
    padding: 15rpx;
    width: 500rpx;
    box-sizing: border-box;
}

.input-num {
    border: 1px solid #ccc;
    width: 350rpx;
}
.prize{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.prize-lable{
    display: flex;
}
.add-p{
    width: 150rpx;
    height: 150rpx;
}
.prize-setting{
    display: flex;
    padding: 0 15rpx;
}
.setting{
    display: flex;
    align-items: center;
}
.prize-ipt{
    border: 1px solid rgb(223, 222, 222);
}
.prize-right{
    display: grid;
}
.icon-addprizes{
    width: 30rpx;
    height: 30rpx;
}
.btn{
    border-radius: 20rpx;
}