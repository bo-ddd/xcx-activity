/* pages/message/index.wxss */
.message{
    background-color: rgb(247, 247, 247);
    height: 100vh;
    /* padding: 50rpx 0; */
    box-sizing: border-box;
}
.header{
    display: flex;
    justify-content: space-between;
    padding: 60rpx 0;
    background-color: #fff
}
.img-box{
    background-color: rgb(245, 100, 100);
    padding: 10rpx 15rpx;
    border-radius: 20rpx;
    
} 
.icon-img{
    width: 48rpx;
    height: 50rpx;
}
.item{
    display: flex;
    flex-direction: column;
    align-items:center;

}
.msg-list{
    background-color: #fff;
}
.list-item{
    padding: 30rpx 0;
    display: flex;
}

.item-box{
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 10rpx 0;
}
.avatar{
    width: 105rpx;
    height: 100rpx;
}
.item-r{
    display: flex;
    justify-content: space-between;
}
.color-hui{
    color: rgb(139, 138, 138);

}