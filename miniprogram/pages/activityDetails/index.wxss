/* pages/activityDetails/index.wxss */
.main {
  height: 100vh;
  overflow: hidden;
  background-repeat: no-repeat;
  background-size: 100%;
}

.wrap-80r {
  width: 590rpx;
  margin: 0 auto;
}

.wrap-30r {
  width: 690rpx;
  margin: 0 auto;
}

.wrap-10r {
  width: 730rpx;
  margin: 0 auto;
}

.wrap-40r {
  width: 670rpx;
  margin: 0 auto;
}

.wrap-50r {
  width: 650rpx;
  margin: 0 auto;
}

.mt-24r {
  margin-top: 24rpx;
}

.mt-32r {
  margin-top: 32rpx;
}

.mt-48r {
  margin-top: 48rpx;
}

.mt-70r {
  margin-top: 70rpx;
}

.mt-100r {
  margin-top: 100rpx;
}

.mt-120r {
  margin-top: 120rpx;
}

.mb-0r {
  margin-bottom: 0rpx;
}

.header {
  height: 500rpx;
  display: flex;
  justify-content: space-between;
}

.header .shop-exchange,
.header .rule,
.header .contact,
.header .share {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  align-items: center;
}

.shop-exchange .name,
.operation .name {
  font-size: 18rpx;
  color: black;
}

.header .icon-shop {
  width: 48rpx;
  height: 48rpx;
}

.icon-rule,
.icon-contact,
.icon-share {
  width: 40rpx;
  height: 40rpx;
}

.header .banner {
  width: 480rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.header .poster {
  height: 300rpx;
}

.header .operation {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.container {
  width: 600rpx;
  height: 300rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.container .img-prize {
  width: 600rpx;
  height: 300rpx;
}

.footer .bar-progress {
  width: 480rpx;
  height: 60rpx;
  border-radius: 240rpx;
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  font-weight: bold;
  color: white;
  background-color: #333333;
}

.bar-progress .line-inner {
  height: 100%;
  border-radius: 240rpx;
  background-size: cover;
}

.bar-progress .value {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -20rpx;
  margin-top: -20rpx;
}

.footer {
  position: fixed;
  bottom: 20rpx;
  left: 50%;
  margin-left: -295rpx;
}

.footer .btn-help {
  padding: 20rpx 200rpx;
  background:url('https://7a6c-zliu-dev-4gclbljp64cb5cd3-1302106483.tcb.qcloud.la/icon-btn_help.png?sign=26036c9f94496b9c95202a99374afd8f&t=1675239826') no-repeat center;
  background-size: 100%;
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
}
/* 遮罩层 */
.mask{
  width:100%;
  height:100%;
  position:fixed;
  top:0;
  left:0;
  background:#000;
  z-index:9000;
  opacity:0.5;
}

/* 弹出层 */
.pop-rule{
  width:70%;
  position:fixed;
  top:20%;
  left:0;
  right:0;
  z-index:9999;
  margin:0 auto;
  background-color:#fff;
  border-radius:10rpx;
  display: flex;
  flex-direction: column;
  align-items:center;
  background-color: #6BABFF;
  padding:8rpx;
  box-sizing: border-box;
}
.pop-rule .content{
  width:100%;
  border-radius:10rpx;
  background-color: #FBEEA4;
  font-size:24rpx;
  padding:40rpx;
  box-sizing: border-box;
}
.pop-rule .title-rule{
   position: absolute;
   top:-20rpx;
   width:388rpx;
   height:70rpx;
}
.pop-rule .close-btn{
  padding:2rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
  box-sizing: border-box;
  border-radius:50%;
  position: absolute;
  top:20rpx;
  right:20rpx;
}

.pop-rule .icon-close{
  width:36rpx;
  height:36rpx;
}

.pop-rule .text-rule{
  line-height: 48rpx;
  color:black;
}
