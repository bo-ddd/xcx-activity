/* pages/login/index.wxss */
.login{
    height: 100vh;
    display: flex;
    justify-content: center;
    flex-direction: column;
}
.box{
    height: 80%;
    display: flex;
    flex-direction: column;
    gap: 40rpx 0;
    align-items: center;
}
.avatar-box{
    width: 100%;
    display: flex;
    justify-content: center;
    border-bottom:1px dashed #b9b6b5;
    padding: 25rpx;
    box-sizing: border-box;
}
.avatar{
    width: 190rpx;
    height: 180rpx;
}
.text{
    font-size: 40rpx;
    font-weight: bold;
}
.desc{
    color: rgb(146, 143, 143);
}
.userInfo{
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20rpx 0;
}
.btn{
    display: flex;
    justify-content: center;
    border-radius: 20rpx;
    background: linear-gradient(to right bottom, rgb(238, 217, 217), #e73c26) ;
    padding: 20rpx 80rpx;
    box-sizing: border-box;
    color: #fff;
}