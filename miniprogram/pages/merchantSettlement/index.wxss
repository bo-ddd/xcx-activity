.store-settlement {
    height: 100vh;
    display: flow-root;
    background: url('https://7a6c-zliu-dev-4gclbljp64cb5cd3-1302106483.tcb.qcloud.la/bg-merchantsettlement.png?sign=4f43c146aaad0cc8c3cb21ef5691a8ef&t=1675408735');
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

