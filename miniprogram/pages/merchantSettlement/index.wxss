.store-settlement {
  height: 100vh;
  display: flow-root;
  /* background: linear-gradient(to bottom,rgb(238,74,0), rgb(219, 217, 87),rgb(238,74,0)); */
  background: url('https://7a6c-zliu-dev-4gclbljp64cb5cd3-1302106483.tcb.qcloud.la/bg-merchantsettlement.png?sign=4d09f53e36fa887b8198835faece1a69&t=1675339586');
