/* pages/merchantSettlement/index.wxss */
.mt16 {
    margin-top: 16rpx;
}

.mb16 {
    margin-bottom: 16rpx;
}

.mt30 {
    margin-top: 30rpx;
}

.mb30 {
    margin-bottom: 30rpx;
}

.ml20 {
    margin-left: 20rpx;
}

.fs32 {
    font-size: 32rpx;
}

.fwb {
    font-weight: bold;
}

.store-settlement {
    height: 100vh;
    display: flow-root;
}

.label::after {
    content: '*';
    color: red;
    margin-left: 10rpx;
}

.title {
    font-size: 54rpx;
    text-align: center;
    margin-top: 16rpx;
}

.merchant-sex .radio {
    display: flex;
    gap: 30rpx;
}


.upload-license .license {
    text-align: center;
}

.upload-license .icon-license {
    height: 400rpx;
    width: 600rpx;
}



.select {
    width: 60%;
    height: 50rpx;
    display: flex;
    justify-content: space-between;
}

.select .select-item {
    align-items: center;
    justify-content: space-between;
    width: 50%;
    position: relative;
}

.arrow-bottom {
    width: 30rpx;
    height: 30rpx;
    position: absolute;
    right: -50rpx;
    top: 10rpx;
    transition: 0.5s;
}

.select-item .items {
    width: 100%;
    max-height: 200rpx;
    background-color: white;
    animation: myclassify 1s;
    overflow-x: scroll;
}

.select-item .item {
    width: 100%;
    height: 60rpx;
    line-height: 60rpx;
    border-bottom: 1px solid #ccc;
}

/* 下拉过度效果 */
@keyframes myclassify {
    from {
        height: 0rpx;
    }

    to {
        height: 210rpx;
    }
}
