/* pages/participateActivities/index.wxss */
.launch-activities {
    height: 100vh;
}

.swiper {
    height: 100%;
}

.swiper-item {
    overflow: scroll;
    height: 100%;
    padding: 40rpx 0;
    box-sizing: border-box;
}
.tab {
    float: left;
    width: 33.3333%;
    text-align: center;
    padding: 10rpx 0;
}

.top-tab_swiper {
    border-bottom: 1px solid #ccc;
    zoom: 1;
    font-size: 30rpx;
}

.top-tab_swiper:after {
    content: "";
    clear: both;
    display: block;
}

.tab-borer {
    border-bottom: 1px solid #f00;
    color: #f00;
    height: 40rpx;
    font-size: 30rpx;
}

.swiper-con {
    /* text-align: center; */
}

.actvity {
    height: 295rpx;
    border-radius: 20rpx;
    box-shadow: 2px 2px 10rpx rgb(131, 131, 131);
    margin-bottom: 40rpx;
    position: relative;
}

.activity-bg {
    border-radius: 20rpx;
    width: 690rpx;
    height: 295rpx;
}

.update-btn {
    /* display: inline-block; */
    background: rgb(247, 245, 245);
    font-size: 30rpx;
    border-radius: 20rpx;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    color: rgb(29, 28, 28);
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}

.actvity .flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.actvity .duration {
    font-size: 20rpx;
    color: white;
}

.actvity .entry {
    display: flex;
    justify-content: flex-end;
}

.actvity .btn-entry {
    border: solid 1rpx white;
    display: inline-block;
    padding: 4rpx 10rpx;
    font-size: 20rpx;
    border-radius: 20rpx;
    color: white;
}

.activity-title {
    font-weight: bold;
}

.activity-text {
    padding: 15rpx;
    
}

