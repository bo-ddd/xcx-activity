/* pages/examineDetails/index.wxss */
.box {
    height: 100vh;
}

.examine-detail {
    padding: 20rpx 0;
    border-radius: 20rpx;
    background-color: white;
    box-shadow: 0 0 20rpx #ccc;
    display: flow-root;
    display: flex;
    flex-direction: column;
    gap: 20rpx 0;
    box-sizing: border-box;
    padding: 20rpx;
    position: relative;
    top: -100rpx;
    height: 880rpx;
    overflow: hidden;
    overflow: scroll;
    overscroll-behavior:inherit
}

.title {
    position: relative;
    height: 400rpx;
    line-height: 300rpx;
    padding-left: 20rpx;
    box-sizing: border-box;
    font-weight: bolder;
    background-color: rgb(238, 123, 102);
    color: white;
}

.item {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.label {
    font-weight: bold;
}

.upload-license .license {
    margin: 0 auto;
    width: 600rpx;
    height: 400rpx;
    border: 5rpx dashed black;
}

.btn {
    display: flex;
    justify-content: space-around;
}

.refuse,
.pass {
    width: 260rpx !important;
}

.pass {
    display: inline-block;
    color: #fff;
    font-weight: bold;
    padding: 15rpx 30rpx;
    border-radius: 30rpx;
    text-align: center;
    background: linear-gradient(to right bottom, rgb(243, 211, 211), #e45e4c);
}

.refuse {
    border: 1rpx solid red;
    display: inline-block;
    font-weight: bold;
    padding: 15rpx 30rpx;
    border-radius: 30rpx;
    text-align: center;
    color: red;
}

.rule {
    width: 610rpx;
    height: 400rpx;
    border: 5rpx solid black;
    margin: 0 auto;
    padding: 10rpx;
    box-sizing: border-box;
}

.prize {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.prize .picture {
    width: 140rpx;
    height: 140rpx;
}

.prize-info {
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
}