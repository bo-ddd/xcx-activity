/* pages/opinion/index.wxss */
.suggest{
    padding: 20rpx 0;
  background-color: rgb(245, 240, 240);  
  height: 100vh;  
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  gap: 30rpx 0;
}
.header{
    border-radius: 20rpx;
    background: linear-gradient(to right bottom, rgb(238, 217, 217), #e73c26) ;
     display: flex;
     justify-content: center;
     align-items: center;
     padding: 30rpx;
     box-sizing: border-box;
}
.title{
    color: rgb(252, 250, 250);
    font-weight: bold;
}
.suggest-icon{
    width: 300rpx;
    height: 200rpx;
}
.textarea{
    background-color: #fff;
    padding: 30rpx;
    box-sizing: border-box;
    border-radius: 20rpx;
}
.textarea-text{
    width: 100%;
}
.btn{
    display: flex;
    justify-content: center;
    border-radius: 20rpx;
    padding: 20rpx 25rpx;
    color: #fff;
    font-weight: bold;

    box-sizing: border-box;
    background: linear-gradient(to right bottom, rgb(243, 211, 211), #e73c26) ;

}