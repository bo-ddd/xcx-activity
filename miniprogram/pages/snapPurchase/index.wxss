.banner-flash-sale {
    width: 100%;
    height: 30vh;
}
.activity-rules{
    width: 80rpx;
    height: 80rpx;
    position: absolute;
    top: 20rpx;
    left: 20rpx;
}

.snap-purchase-outer {
    background-color: white;
    height: 100vh;
}

/* tab切换 */


.title {
    background-image: linear-gradient(to right, #dc3a38, #ed573c, #fd7541);
    color: white;
    font-size: 30rpx;
    padding: 20rpx 0;
    text-align: center;
}

/* tab切换 */

.fontColorBox,
.fontColorBox1 {
    /* 文字默认颜色 */
    color: black;
}

.navBox {
    /* 顶部tab盒子样式 */
    width: 100%;
    height: 108rpx;
    background: white;
    display: flex;
    align-items: center;
    justify-content: space-around;
}

.titleBox {
    /* 未选中文字的样式 */
    color: rgb(168, 170, 175);
    font-size: 25rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.lineBox,
.notLineBox {
    /* 选中及未选中底线共同样式 */
    width: 32rpx;
    height: 8rpx;
}

.lineBox {
    /* 选中底线样式 */
    background: rgb(43, 44, 45);
    margin-top: 16rpx;
    border-radius: 4rpx;
}

.notLineBox {
    /* 未选中底线样式 */
    background: transparent;
}

.swiperTtemBox {
    /* 底部内容样式 */
    height: calc(100vh - 40vh);
    overflow: scroll;
    margin: 12rpx 0rpx;
    font-size: 28rpx;
}
.end-activity-title {
    font-size: 40rpx;
    color: #969696;
    font-weight: 700;
    display: flex;
    justify-content: center;
}
.end-activity-logo{
    width: 200rpx;
    height: 200rpx;
}
.end-activity-detail{
    padding: 20rpx 0;
    border-bottom: 1px solid #ccc;
    display: flex;
}
.end-activity-describe{
    height: 120rpx;
    font-size: 35rpx;
    font-weight: 700;
}
.end-activity-price{
    font-size: 35rpx;
    font-weight: 700;
    color: red;
}
.end-activity-before{
    font-size: 25rpx;
}
.end-activity-closed{
    float: right;
}
.end-activity{
    width: 100%;
}