/* pages/createActivity/index.wxss */
.swiper-item {
    overflow: scroll;
    height: 100%;
    padding: 40rpx 0;
    box-sizing: border-box;
}

.actvity {
    height: 295rpx;
    border-radius: 20rpx;
    box-shadow: 2px 2px 10rpx rgb(131, 131, 131);
    margin-bottom: 40rpx;
    position: relative;
}

.activity-bg {
    border-radius: 20rpx;
    /* width: 690rpx; */
    height: 295rpx;
}

.update-btn {
    background: rgb(247, 245, 245);
    font-size: 30rpx;
    border-radius: 20rpx;
    padding: 10rpx 20rpx;
    box-sizing: border-box;
    color: rgb(29, 28, 28);
    position: absolute;
    bottom: 10rpx;
    right: 10rpx;
}
.actvity .flex-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.actvity .duration {
    font-size: 20rpx;
    color: white;
}

.actvity .entry {
    display: flex;
    justify-content: flex-end;
}

.actvity .btn-entry {
    border: solid 1rpx white;
    display: inline-block;
    padding: 4rpx 10rpx;
    font-size: 20rpx;
    border-radius: 20rpx;
    color: white;
}

.activity-title {
    font-weight: bold;
}

.activity-text {
    padding: 15rpx;
}



.page-poster {
    display: flex;
}

.poster {
    border: 1px dashed #ccc;
    height: 420rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    background-image: url('https://7a6c-zliu-dev-4gclbljp64cb5cd3-1302106483.tcb.qcloud.la/icon-choice.png?sign=647490245fea4f0f5c212c6844bd6c4b&t=1675417159');
     background-repeat: no-repeat;
     background-position: center;
}

/* .poster-icon {
    width: 100rpx;
    height: 100rpx;
} */

.tab {
    float: left;
    width: 49.3333%;
    text-align: center;
    padding: 10rpx 0;
}

.top-tab_swiper {
    border-bottom: 1px solid #ccc;
    zoom: 1;
    font-size: 30rpx;
}

.gift-box {
    display: flex;
    justify-content: center;
}

.gift {
    width: 150rpx;
    height: 150rpx;
}

.top-tab_swiper:after {
    content: "";
    clear: both;
    display: block;
}

.tab-borer {
    border-bottom: 1px solid #f00;
    color: #f00;
    height: 40rpx;
    font-size: 30rpx;
}


.page-lable {
    display: flex;
    align-items: center;
}

.page-lable-rule {
    display: flex;
    align-items: center;
}

.add {
    display: flex;
    flex-direction: column;
    gap: 30rpx 0;
    padding: 20rpx 0;
    overflow: scroll;
    box-sizing: border-box;
}

.lable {
    font-size: 32rpx;
    color: rgb(75, 74, 74);
    width: 165rpx;

}
.color-cc{
    font-size: 25rpx;
    color: rgb(165, 165, 165);
}
.input {
    /* width: 400rpx; */
    height: 60rpx;
    border-bottom: 1px solid rgb(201, 200, 200);
}

.textarea {
    border: 1px solid #ccc;
    padding: 15rpx;
    width: 500rpx;
    height: 430rpx;
    box-sizing: border-box;
}

.input-num {
    border: 1px solid #ccc;
    width: 350rpx;
}

.prize {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.prize-lable {
    display: flex;
}

.add-p {
    width: 150rpx;
    height: 150rpx;
}

.prize-setting {
    display: flex;
    padding: 0 15rpx;
}

.setting {
    display: flex;
    align-items: center;
}

.setting-lable {
    width: 150rpx;
}

.prize-ipt {
    border-bottom: 1px solid rgb(201, 200, 200);
    height: 35rpx;


}

.prize-right {
    display: grid;
}

.icon-addprizes {
    width: 30rpx;
    height: 30rpx;
}
.btn-box{
    display: flex;
    align-items: center;
}
.template-btn{
    border-radius: 20rpx;
    font-size: 28rpx;
    padding: 20rpx;
    width: 300rpx !important;
}
.btn {
    display: inline-block;
    padding: 20rpx;
    font-size: 28rpx;
    width: 300rpx !important;
    border-radius: 20rpx;
    background: #e64430!important;
    color: #fff!important;
}